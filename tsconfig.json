{
    "compilerOptions": {
        "checkJs": true,
        "target": "es5",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ESNext", "ScriptHost"],
        "maxNodeModuleJsDepth": 10
    },
    "exclude": ["node_modules", "**/node_modules/*", "./tests/**"],
    "include": ["**/*"]
}
